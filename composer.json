{
    "name": "otaodev/opentelemetrytracer",
    "description": "A basic use for the opentelemetry tracer in php applications",
    "type": "library",
    "require": {
        "php": ">=8.2",
        "ext-grpc": "*",
        "ext-opentelemetry": "*",
        "open-telemetry/api": "^1.0",
        "open-telemetry/exporter-otlp": "^1.0",
        "open-telemetry/sdk": "^1.0",
        "open-telemetry/sem-conv": "^1.24",
        "open-telemetry/transport-grpc": "^1.0",
        "symfony/http-kernel": "^7.0"
    },
    "require-dev": {
        "phpro/grumphp": "^2.5",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Otaodev\\Opentelemetrytracer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Otaodev\\Opentelemetrytracer\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Tiago Oliveira",
            "email": "contato@otao.dev.br"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "phpro/grumphp": true
        }
    }
}
